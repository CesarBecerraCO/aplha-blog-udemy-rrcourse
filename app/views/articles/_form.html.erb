<%= render "shared/messages", obj:@article %>

<div class="row">
  <div class="col-xs-12">
    <!-- Para crear el formulario -->
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"})  do |f| %>
    
      <div class="form-group">
        <label for="inputTitle" class="col-sm-2 control-label"><%= f.label :title %></label>
        <div class="col-sm-8">
          <!-- <input type="email" class="form-control" id="inputTitle" placeholder="Email"> -->
          <%= f.text_field :title, class:"form-control", id:"inputTitle", placeholder:"Title of article", autofocus: true %>
        </div>
      </div>
  
      <div class="form-group">
        <label for="inputDesc" class="col-sm-2 control-label"><%= f.label :description %></label>
        <div class="col-sm-8">
          <%= f.text_area :description, class:"form-control", id: "inputDesc", placeholder: "Description of article", rows: 10 %>
        </div>
      </div>
      
      <!-- Para las categorÃ­as -->
      <div class="form-group">
        <div class="row">
          <div class="col-sm-offset-2 col-sm-8">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class:"btn btn-primary btn-lg" %>
        </div>
      </div>
      
      <div class="col-sm-12 text-center">
        [ <%= link_to "Cancel request and go back to the article list", articles_path %> ]
      </div>
    <% end %>
  </div>
</div>
