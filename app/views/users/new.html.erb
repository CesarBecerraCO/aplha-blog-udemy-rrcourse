<h1 align="center">Signup for Alpha Blog</h1>

<%= render "shared/messages", obj:@user %>

<div class="row">
  <div class="col-xs-12">
    <!-- Para crear el formulario -->
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"})  do |f| %>
    
      <div class="form-group">
        <label for="userName" class="col-sm-2 control-label"><%= f.label :username %></label>
        <div class="col-sm-8">
          <%= f.text_field :username, class:"form-control", id:"userName", placeholder:"Enter username", autofocus: true %>
        </div>
      </div>
  
      <div class="form-group">
        <label for="userEmail" class="col-sm-2 control-label"><%= f.label :email %></label>
        <div class="col-sm-8">
          <%= f.email_field :email, class:"form-control", id:"userEmail", placeholder:"Enter email" %>
        </div>
      </div>
      
      <div class="form-group">
        <label for="userPass" class="col-sm-2 control-label"><%= f.label :password %></label>
        <div class="col-sm-8">
          <%= f.password_field :password, class:"form-control", id:"userPass", placeholder:"Enter password" %>
        </div>
      </div>
  
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit "Sing up", class:"btn btn-primary btn-lg" %>
        </div>
      </div>
      
      <div class="col-sm-12 text-center">
        [ <%= link_to "Cancel request and go back to the article list", articles_path %> ]
      </div>
    <% end %>
  </div>
</div>
